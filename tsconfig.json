{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["node"],
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src/**/*.ts", "types"],
    "exclude": ["node_modules"],
    "ts-node": {
      "files": true
    },
  }
  